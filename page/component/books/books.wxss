/**index.wxss**/

/* 图书展示区域容器 */
.book-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx;
}

/* 图书单元区域样式 */
.box{
  width: 50%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

/* 图书封面图片 */
image{
  width: 200rpx;
  height: 300rpx;
}

/* 图书标题文本样式 */
text{
  text-align: center;
  font-size: small;
}