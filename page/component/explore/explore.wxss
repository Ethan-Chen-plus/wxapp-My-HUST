/**index.wxss**/
/* 1-1 swiper组件 */
swiper{
  height: 700rpx;
}

/* 1-2 swiper中的图片 */
swiper image{
  width: 100%;
  height: 100%;
}

#news-list{
  min-height: 600rpx;
  padding: 15rpx;
}

/* 2-2列表项目 */
.list-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}

/* 2-3新闻图片 */
.list-item image{
  width: 230rpx;
  height: 150rpx;
  margin: 10rpx;
}

/*2-4 新闻标题  */
.list-item text{
  width: 100%;
  line-height: 60rpx;
  font-size: 10pt;
}


